{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/server.ts",
    "lint": "eslint 'src/**/*.ts'",
    "db:seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "tunnel": "ngrok http 3000",
    "tunnel:delayed": "npx wait-on tcp:3000 && npx ngrok http 3000",
    "dev:tunnel": "concurrently --names \"NODE,NGROK\" --prefix \"[{name}]\" --prefix-colors \"cyan,green\" --raw \"npm run dev\" \"npm run tunnel:delayed\"",
    "dev:tunnel:worker": "concurrently --names \"NODE,NGROK\" --prefix \"[{name}]\" --prefix-colors \"cyan,green\" --raw \"npm run dev\" \"npm run worker:dev\" \"npm run tunnel:delayed\"",
    "worker:start": "node dist/workers/notification.worker.js",
    "worker:dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register src/workers/notification.worker.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WDP301-SMMS/Backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/WDP301-SMMS/Backend/issues"
  },
  "homepage": "https://github.com/WDP301-SMMS/Backend#readme",
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/express": "^5.0.2",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.15.29",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.28.0",
    "express": "^5.1.0",
    "install": "^0.13.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.1.10",
    "npm": "^11.4.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/nodemailer": "^6.4.17",
    "@types/otp-generator": "^4.0.2",
    "@types/socket.io": "^3.0.1",
    "@types/yamljs": "^0.2.34",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.56.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.4.0",
    "google-auth-library": "^9.15.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.15.1",
    "multer": "^2.0.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.3",
    "otp-generator": "^4.0.1",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "_moduleAliases": {
    "@": "./src",
    "@controllers": "./src/controllers",
    "@routes": "./src/routes",
    "@middlewares": "./src/middlewares",
    "@models": "./src/models",
    "@config": "./src/config",
    "@enums": "./src/enums",
    "@interfaces": "./src/interfaces",
    "@workers": "./src/workers",
    "@queues": "./src/queues",
    "@services": "./src/services"
  }
